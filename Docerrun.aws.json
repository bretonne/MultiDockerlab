{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "bretonnetx/docker:multi-client",
            "hostname": "client",
            "essential": false
         },
         {
             "name": "server",
             "image": "bretonnetx/docker:multi-client",
             "hostname": "api",
             "essential": false
         },
         {
             "name": "worker",
             "image": "bretonnetx/docker:multi-worker",
             "hostname": "worker",
             "essential": false
         },
         {
             "name": "nginx",
             "image": "bretonnetx/docker:multi-client",
             "essential":true,
             "portMappings": [
                 {
                     "hostPort": 80,
                     "containerPort": 80
                 }
             ],
             "links": ["client", "server"]
         }
    ]
}